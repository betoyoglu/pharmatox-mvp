{
  "name": "Pharmatox Cloud Workspace",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",

  "features": {
    "ghcr.io/devcontainers/features/firebase-tools:1": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },

  "postCreateCommand": "firebase --version && node --version && npm --version",

  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.flutter",
        "Dart-Code.dart-code"
      ]
    }
  }
}
